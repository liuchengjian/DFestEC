<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_height="75dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_top_shopcart_clear"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="清空"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_top_shopcart"
            android:layout_centerHorizontal="true"
            android:text="购物车"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_top_shopcart_remove"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="删除"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/rv_top_shopcart"/>
    <!-- 没有东西时候的占位符-->
    <android.support.v7.widget.ViewStubCompat
        android:id="@+id/stub_no_item"
        android:layout_weight="8"
        android:background="#fff"
        android:minHeight="50dp"
        android:layout="@layout/stub_shop_cart_no_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
   
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <!--全选图标模块-->
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/itv_icon_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="{fa-check-circle}"
                android:background="#ccc"
                android:textSize="20sp"
                android:layout_height="match_parent" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="全选"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>
        </android.support.v7.widget.LinearLayoutCompat>
            <!--合计部分-->
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="合计:"
                android:gravity="center"
                android:textColor="#888"
                android:textSize="20sp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shop_cart_total_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="￥0.01"
                android:gravity="center|left"
                android:textColor="#888"
                android:textSize="20sp"
                />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_shop_cart_pay"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:text="结算"/>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>