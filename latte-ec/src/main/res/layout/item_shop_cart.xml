<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:layout_height="120dp">
    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="{fa-check-circle}"
        android:textColor="#888"
        android:id="@+id/icon_item_shop_cart"
        android:gravity="center"/>
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_item_shop_cart"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_weight="2"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品标题"
            android:id="@+id/tv_shop_cart_title"
            android:layout_marginBottom="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情描述"
            android:id="@+id/tv_shop_cart_desc"
            android:layout_marginBottom="5dp"

            />
        <android.support.v7.widget.AppCompatTextView
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.00"
            android:id="@+id/tv_shop_cart_price"
            android:layout_marginBottom="5dp"

            />
    </android.support.v7.widget.LinearLayoutCompat>
    <!--商品信息结算-->
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="bottom"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        >
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/iocn_item_minus"
            android:text="{fa-minus-square-o}"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="1"
            android:id="@+id/tv_shop_cart_count"
            android:gravity="center"
            android:textSize="18sp"
            />
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/iocn_item_plus"
            android:text="{fa-plus-square-o}"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>